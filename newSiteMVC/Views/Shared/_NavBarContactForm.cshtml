<ul id="login-dp" class="dropdown-menu nav-contact-form">
    <li style="margin-top: -40px;">
        <div class="row">
            <div class="col-md-12">
                <form class="form-horizontal" role="form" method="post" action="@Url.Action("ContactFormSendEmail", "Helper")">
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">First Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="firstname" name="firstname" placeholder="First Name" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="name" class="col-sm-3 control-label">Last Name</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="lastname" name="lastname" placeholder="Last Name" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="email" class="col-sm-3 control-label">Email</label>
                        <div class="col-sm-8">
                            <input type="email" class="form-control" id="email" name="email" placeholder="example@domain.com" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="company" class="col-sm-3 control-label">Company</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="company" name="company" placeholder="Company" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="country" class="col-sm-3 control-label">Country</label>
                        <div class="col-sm-8">
                            <input type="text" class="form-control" id="country" name="country" placeholder="Country" value="">
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="message" class="col-sm-3 control-label">Message</label>
                        <div class="col-sm-8">
                            <textarea class="form-control" rows="2" name="message"></textarea>
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-sm-7 col-sm-offset-3">
                            @if (Request.RawUrl != "/Page/ContactUs")
                            {
                                <div class="g-recaptcha" data-sitekey="6LezXg4UAAAAAOZvDPmVyGdfuwjN8L11JYLIZaNr" data-callback="enableBtn2"></div>
                            }
                            </div>                                              
                    </div>
                    <div class="form-group">
                        <div class="col-sm-8 col-sm-offset-3">
                            <br />
                            <button type="submit" class="btn btn-primary btn-block" id="submitButton2" disabled>Send Message</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </li>
</ul>

<script type="text/javascript">
    function enableBtn2() {
        document.getElementById("submitButton2").disabled = false;
    }
</script>
