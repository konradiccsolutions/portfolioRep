@model IEnumerable<newSiteMVC.Models.tbl_UserControl>

<section id="AboutUs" class="bg-dark-gray" style="background-color:@Model.First(it => it.TypeId == "NewsFeed").SectionBackgroundColour">
    <div class="container" style="margin-top:-30px">
        <div class="about">
