                <div class="col-md-12">
                    <h3 style="text-align: center" style="color: @Model.First(it => it.TypeId == "NewsFeed").SectionTextColour">ICC Solutions</h3>
                    <span style="display:table;margin:0 auto; color: @Model.First(it => it.TypeId == "NewsFeed").SectionTextUnderlineColour "></span>
                </div>
            </div>
        </div>
        <div class="row">

            @*<%--------------------- News Section ---------------------%>*@

            @Html.Partial("~/Views/Home/Shared/_InfoFeedWithoutImages.cshtml", Model)

            @*<%--------------------- Video Section ---------------------%>*@

            @Html.Partial("~/Views/Pages/Shared/_VideoPodComponent.cshtml", Model.Where(it => it.PageId == "Home"))

            @*<%--------------------- Events Section ---------------------%>*@
            @Html.Partial("~/Views/Home/Shared/_InfoFeedWithImages.cshtml", Model)
            

        </div>
    </div>
</section>

