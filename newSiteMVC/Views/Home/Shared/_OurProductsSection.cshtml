@model IEnumerable<newSiteMVC.Models.tbl_UserControl>

<section id="Products" style="margin-bottom: 90px;background-color:@Model.First(it => it.TypeId == "ImagePod" && it.PageId == "Home").SectionBackgroundColour">
    <div class="container" style="margin-top:-30px">
        <div class="about">
            <div class="row">
                <div class="col-md-12">
                    <h3 style="text-align: center" style="color: @Model.First(it => it.TypeId == "ImagePod" && it.PageId == "Home").SectionTextColour">Our Products</h3>
                    <span style="display:table;margin:0 auto; color: @Model.First(it => it.TypeId == "ImagePod" && it.PageId == "Home").SectionTextUnderlineColour "></span>
                </div>
            </div>
        </div>
        <!-- Image pod content -->
        <ul class="products-grid">
            @foreach (var item in Model.Where(it => it.TypeId == "ImagePod" && it.PageId == "Home"))
            {
                @Html.Partial("~/Views/Pages/Shared/_ImagePodRoundComponent.cshtml", item)
            }
        </ul>
    </div>
</section>
