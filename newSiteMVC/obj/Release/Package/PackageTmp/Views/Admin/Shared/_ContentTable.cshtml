@model IEnumerable<newSiteMVC.Models.tbl_UserControl>
@using (Html.BeginForm("UpdateTableOrder", "Admin", FormMethod.Post))
            {
    <table class="table">
        <thead>
            <tr>
                <th>
                    Order
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Title)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Active)
                </th>
                <th>

                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Where(item => item.TypeId != "TopBanner"))
            {
                <tr id="@item.Id">
                    <td class="priority">
                        @Html.EditorFor(modelItem => item.Priority, new { htmlAttributes = new { @class = "input-sm", style = "width:55px" } })
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Title)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Active)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.Id , pageType = @Model.First().PageId }, new { @class = "btn btn-info", style = "margin-bottom: 5px;min-width: 70px" })
                        @Html.ActionLink("Details", "Details", new { id = item.Id, pageType = @Model.First().PageId }, new { @class = "btn btn-success", style = "margin-bottom: 5px;min-width: 70px" })
                        @Html.ActionLink("Delete", "Delete", new { id = item.Id , pageType = @Model.First().PageId }, new { @class = "btn btn-danger", style = "margin-bottom: 5px;min-width: 70px" })
                        @Html.HiddenFor(modelItem => item.Id)
                    </td>
                </tr>
            }
        </tbody>
    </table>
                <input type="submit" value="Save Order" class="btn btn-primary" />

}
